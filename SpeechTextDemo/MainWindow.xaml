<Window x:Class="SpeechTextDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechTextDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox x:Name="SpeechTextTB" Width="200" Height="50">杨局长</TextBox>
            <Button Click="Button_Click" Width="200" Height="50">Play</Button>
            <Button Click="Button_Click_Pause" Width="200" Height="50">Pause</Button>
            <Button Click="Button_Click_Resume" Width="200" Height="50">Resume</Button>
            <Button Click="Button_Click_Stop" Width="200" Height="50">Stop</Button>
        </StackPanel>
    </Grid>
</Window>
